{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"lib": ["es2018", "dom"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
